<?xml version="1.0" encoding="UTF-8"?>
<project name="Consumer Love" default="build">

    <target name="build"
	    depends="prepare,lint,phpunit"/>

    <target name="clean" description="Cleanup build artifacts">
	<delete dir="${basedir}/build/logs"/>
	<delete dir="${basedir}/build/coverage"/>
	<delete dir="${basedir}/build/coverage/html"/>
    </target>

    <target name="prepare" depends="clean" description="Prepare for build">
	<mkdir dir="${basedir}/build/logs"/>
	<mkdir dir="${basedir}/build/coverage"/>
	<mkdir dir="${basedir}/build/coverage/html"/>
    </target>

    <target name="lint" description="Perform syntax check of sourcecode files">
        <phplint>
            <fileset dir=".">
                <include name="*.php" />
                <include name="**/*.php" />
            </fileset>
        </phplint>
    </target>

    <target name="phpunit"
	    description="Execute all unit tests with CakePHP.">
	<exec command="cake test app AllTests --coverage-clover build/coverage/clover.xml --coverage-html build/coverage/html/ --log-junit build/logs/junit.xml"></exec>
    </target>

</project>
